<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:define="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_actionbar_height"
        android:background="@color/common_actionbar_bg_color">

        <RelativeLayout
            android:id="@+id/common_actionbar_back_layout"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/common_actionbar_margin"
            android:background="@null"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/common_actionbar_back_imgbtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:clickable="false"
                android:duplicateParentState="true"
                android:focusable="false"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="@dimen/common_actionbar_back_size"
                    android:layout_height="@dimen/common_actionbar_back_size"
                    android:layout_marginLeft="@dimen/common_actionbar_margin"
                    android:background="@null"
                    android:clickable="false"
                    android:duplicateParentState="true"
                    android:focusable="false"
                    android:scaleType="centerInside"
                    android:src="@drawable/common_actionbar_return_btn" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/common_actionbar_img_height"
                    android:layout_marginLeft="@dimen/common_actionbar_margin"
                    android:background="@null"
                    android:clickable="false"
                    android:duplicateParentState="true"
                    android:focusable="false"
                    android:scaleType="centerInside"
                    android:src="@drawable/common_actionbar_return_line" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/common_actionbar_home_imgbtn"
                android:layout_width="@dimen/common_actionbar_img_height"
                android:layout_height="@dimen/common_actionbar_img_height"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/common_actionbar_margin"
                android:background="@null"
                android:clickable="false"
                android:duplicateParentState="true"
                android:focusable="false"
                android:scaleType="centerInside"
                android:src="@drawable/common_actionbar_home"
                android:visibility="gone" />

            <TextView
                android:id="@+id/common_actionbar_title_txt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/common_actionbar_title_margin"
                android:clickable="false"
                android:duplicateParentState="true"
                android:ellipsize="end"
                android:focusable="false"
                android:gravity="left|center_vertical"
                android:maxEms="10"
                android:singleLine="true"
                android:textColor="@drawable/common_actionbar_font"
                android:textSize="@dimen/common_actionbar_title_size" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/common_actionbar_right_layout"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/common_actionbar_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/common_actionbar_right_View"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/common_actionbar_right_btn"
                android:paddingLeft="@dimen/common_actionbar_margin"
                android:paddingRight="@dimen/common_actionbar_margin"
                android:scaleType="centerInside"
                android:visibility="gone" />

            <TextView
                android:id="@+id/common_actionbar_right_text"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/common_actionbar_text_margin"
                android:layout_toLeftOf="@+id/common_actionbar_right_btn"
                android:gravity="center_vertical"
                android:textColor="@color/common_actionbar_right_txt_color"
                android:textSize="@dimen/common_actionbar_right_txt_size"
                android:visibility="gone" />

            <ImageButton
                android:id="@+id/common_actionbar_right_img"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/common_actionbar_margin"
                android:background="@null"
                android:scaleType="centerInside"
                android:visibility="gone" />

            <Button
                android:id="@+id/common_actionbar_right_btn"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:paddingLeft="@dimen/common_actionbar_margin"
                android:paddingRight="@dimen/common_actionbar_margin"
                android:textColor="@drawable/common_actionbar_font"
                android:textSize="@dimen/common_actionbar_right_txt_size"
                android:visibility="gone" />
        </RelativeLayout>
    </RelativeLayout>

    <View style="@style/common_line_style" />
